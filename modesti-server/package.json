{
  "name": "modesti",
  "description": "Monitoring Data Entry System for Technical Infrastructure",
  "author": "Justin Lewis Salmon <justin.lewis.salmon@cern.ch>",
  "repository": {
    "type": "git",
    "url": "ssh://git@gitlab.cern.ch:7999/modesti/modesti.git"
  },
  "private": true,
  "scripts": {
    "preinstall": "npm set progress=false",
    "copy": "cpx \"node_modules/**/*.{css,scss,eot,ttf,woff,woff2}\" build/resources/main/static/lib",
    "copy:handsontable": "cpx \"node_modules/handsontable-pro/dist/**/*.js\" build/resources/main/static/lib/handsontable-pro/dist",
    "build": "npm install -s && npm run copy -s && npm run build:js -s && npm run build:css -s && npm run build:html -s && npm run copy:handsontable -s",
    "build:js": "webpack --config src/main/frontend/config/webpack-prod.js --NODE_ENV=production",
    "build:css": "node-sass src/main/frontend/app/main.scss --output-style compressed -o build/resources/main/static/bin",
    "build:html": "cpx \"src/main/frontend/app/**/*.html\" build/resources/main/static",
    "watch": "typings install && npm run build:css -s && concurrently \"npm run watch:js\" \"npm run watch:css\" \"npm run watch:html\"",
    "watch:js": "webpack --watch --config src/main/frontend/config/webpack-dev.js --NODE_ENV=dev --display-error-details",
    "dev": "typings install && npm run build:css -s && concurrently \"npm run dev:js\" \"npm run watch:css\" \"npm run watch:html\"",
    "dev:js": "webpack --watch --config src/main/frontend/config/webpack-external-api-dev.js https://modesti-test.cern.ch/api/ --NODE_ENV=dev --display-error-details",
    "watch:css": "node-sass src/main/frontend/app/main.scss --watch -o build/resources/main/static/bin",
    "watch:html": "cpx -w \"src/main/frontend/app/**/*.html\" build/resources/main/static",
    "lint": "npm run lint:ts -s && npm run lint:scss -s",
    "lint:ts": "tslint \"src/main/frontend/app/**/*.ts\"",
    "lint:scss": "sass-lint -v \"src/main/frontend/app/**/*.scss\"",
    "test": "karma start --NODE_ENV=test"
  },
  "dependencies": {
    "ag-grid": "8.2.0",
    "angular": "1.5.10",
    "angular-animate": "1.5.10",
    "angular-bind-html-compile": "1.4.1",
    "angular-bootstrap-select-updated": "github:jlsalmon/angular-bootstrap-select",
    "angular-cache": "4.6.0",
    "angular-cookies": "1.5.10",
    "angular-file-upload": "^2.3.4",
    "angular-filter": "^0.5.9",
    "angular-http-auth": "^1.3.0",
    "angular-sanitize": "1.6.2",
    "angular-spinner": "^0.8.1",
    "angular-ui-bootstrap": "^2.2.0",
    "angular-ui-router": "1.0.0-beta.1",
    "angular-xeditable": "^0.6.0",
    "bootstrap-sass": "^3.3.7",
    "file-loader": "^0.9.0",
    "font-awesome": "4.7.*",
    "handsontable-pro": "git+ssh://git@git.handsontable.com:handsontable/handsontable-pro.git#1.10.2",
    "hot-formula-parser": "^1.0.19",
    "jquery": "^3.1.1",
    "latinize": "^0.4.0",
    "lodash": "4.17.*",
    "moment": "^2.15.2",
    "ngstorage": "^0.3.10",
    "numbro": "^1.9.3",
    "oclazyload": "^1.0.9",
    "pikaday": "^1.5.1",
    "restangular": "^1.5.2",
    "select2": "^3.5.1",
    "spin.js": "^2.3.2",
    "string-replace-loader": "^1.3.0",
    "ui-select": "^0.19.6",
    "zeroclipboard": "^2.2.0"
  },
  "devDependencies": {
    "concurrently": "3.1.*",
    "cpx": "1.5.*",
    "jasmine-reporters": "2.2.*",
    "karma": "1.3.*",
    "karma-chrome-launcher": "2.0.*",
    "karma-coverage": "1.1.*",
    "karma-jasmine": "1.1.*",
    "karma-phantomjs-launcher": "1.0.*",
    "lite-server": "^2.3.0",    
    "node-sass": "4.1.*",
    "phantomjs-polyfill": "0.0.2",
    "phantomjs-prebuilt": "2.1.*",
    "protractor": "4.0.*",
    "sass-lint": "1.10.*",
    "ts-loader": "1.3.*",
    "tslint": "4.2.*",
    "typescript": "2.1.*",
    "typings": "2.1.*",
    "url-loader": "^0.5.7",
    "webpack": "1.14.*"
  }
}
