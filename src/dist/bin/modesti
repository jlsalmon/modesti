#!/usr/bin/env bash

INSTALL_DIR="$(dirname "$(dirname "$(readlink -f ${BASH_SOURCE[0]})")")"

export MODE=service
export APP_NAME=modesti
export LOG_FILENAME=modesti.log
export PID_FOLDER=${INSTALL_DIR}/run
export LOG_FOLDER=${INSTALL_DIR}/log
export JAVA_OPTS="-Dspring.config.location=${INSTALL_DIR}/conf/modesti.properties -Dloader.path=${INSTALL_DIR}/plugins -Dlogging.config=${INSTALL_DIR}/conf/logback.xml"

exec ${INSTALL_DIR}/lib/modesti-server-*.jar $1
